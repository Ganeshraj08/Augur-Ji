<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignUP AugurJI</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <style>
      .image {
        width: 800px;
        position: absolute;
        top: -30px;
        z-index: -1;
        left: -5%;
      }
      .signup {
        margin-left: 40%;
        margin-right: 40%;
      }
      .card{
        box-shadow: 5px 5px 17px grey;
      }
      .bg-glass {
          background-color: hsla(0, 0%, 100%, 0.9) !important;
          backdrop-filter: saturate(200%) blur(25px);
        }
    </style>
  </head>
  <body>
    <!-- Section: Design Block -->
    <section class="background-radial-gradient overflow-hidden">
      
      <nav class="navbar fixed-top navbar-expand-lg  bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand " href="./index.html"
            ><img src="/images/Augur ji 1.png" width="60" height="40" alt=""
          />
        </a>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link "  href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="">About</a>
          </li>
        </ul>

          </div>
      </nav>
      <br/>
      <div class="container text-center text-lg-start">
        <div class="position-relative row gx-lg-5 align-items-center mb-5">
          <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
            <img src="/images/3763028.jpg" class="image" alt="" />
          </div>

          <div
            class="col-lg-6 mb-5 mb-lg-0 position-relative"
            style="z-index: 10"
          >
            <h3
              class="my-5 display-6 fw-bold ls-tight"
              style="color: limegreen"
            >
              SignUp <img src="/images/Augur ji 1.png" width="80" height="60" alt=""
              /> &
              <br />
              <span style="color: #007bff">Track Your Health with Ease</span>
            </h3>
          

            <div class="card bg-glass">
              <div class="card-body px-4 py-4 px-md-5">
                <form method="post" action="signUp">
                  <!-- 2 column grid layout with text inputs for the first and last names -->
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1"
                          >First name</label
                        >

                        <input
                          type="text"
                          id="form3Example1"
                          class="form-control"
                          name="firstName"
                        />
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example2"
                          >Last name</label
                        >

                        <input
                          type="text"
                          id="form3Example2"
                          class="form-control"
                          name="lastName"
                        />
                      </div>
                    </div>
                  </div>

                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3"
                      >Email address</label
                    >

                    <input
                      type="email"
                      id="form3Example3"
                      class="form-control"
                      name="email"
                    />
                  </div>

                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example4"
                      >Password</label
                    >

                    <input
                      type="password"
                      id="form3Example4"
                      class="form-control"
                      name="password"
                    />
                  </div>

                  <!-- Checkbox -->
                  

                  <!-- Submit button -->
                  <button
                    type="submit"
                    class="signup btn btn-primary btn-block mb-4"
                  >
                    Sign up
                  </button>
                  <p>
                    Do you already have an account <a class="link" href="/login"> Login</a>.
                  </p>
                  <!-- Register buttons -->
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Section: Design Block -->
  </body>
</html>
